{% extends 'pages/base.jinja' %}


{% block title %}

    Totally Timber - Form Page 2

{% endblock %}


{% block content %}

    <h1> Timber </h1>
    <h1>Consent Document Form</h1>

    <div>
      <h5> chosen timber </h5>
      <div id="sidebyRestricted">
        <p>{{ defaults.species }}</p>
        <p>{{ defaults.profile }}</p>
        <a role="button" href="\" id="rightside" >Go Back</a>
      </div>
      <h4>Person Details</h4>
      <form action="/pageSubmit/details" method="post">
        <input name="name" type="text" placeholder="Your Name" value="{{ defaults.name }}">

        <input name="phoneNum" type="tel" placeholder="Phone Number" value="{{ defaults.phoneNum }}">
        <input name="email" type="email" placeholder="YourEmail@email.com" value="{{ defaults.email }}">

        <div>
          <h4>Clients Details</h4>
          <input name="cName" placeholder="clients name" value="{{ defaults.cName }}">
          <input name="address" type="text" placeholder="site address" value="{{ defaults.address }}">
        </div>

        <button id="submit" type="submit">submit</button>
      </form>
    </div>

{% endblock %}

